<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_modern"
    tools:context=".Cadeau">

    <!-- Bannière moderne avec titre, upgrade banner et badge -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bannerContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Bouton de fermeture circulaire -->
        <LinearLayout
            android:id="@+id/btnCloseBanner"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_icon_button_modern"
            android:clickable="true"
            android:elevation="2dp"
            android:focusable="true"

            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:contentDescription="Fermer"
                android:src="@drawable/ic_home" />
        </LinearLayout>

        <!-- Titre "READING REWARD" -->

        <!-- Banner "UPGRADE ONLY $4.99" -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/upgradeBanner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:strokeColor="@android:color/transparent"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_upgrade_banner"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="65dp"
                    android:text="UPGRADE"
                    android:textAppearance="@style/TextAppearance.SportBrains.Headline"
                    android:textColor="@color/white"
                    android:textSize="32sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="65dp"
                    android:text="ONLY $4.99"
                    android:textAppearance="@style/TextAppearance.SportBrains.Body"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Badge circulaire "Extra x5" -->
        <FrameLayout
            android:id="@+id/extraBadge"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/bg_extra_badge"
            app:layout_constraintBottom_toBottomOf="@+id/upgradeBanner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/upgradeBanner"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Extra"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="x5"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </FrameLayout>

        <!-- Diamants décoratifs en arrière-plan -->
        <ImageView
            android:id="@+id/diamond1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:alpha="0.3"
            android:src="@drawable/garnet"
            android:contentDescription="Diamant décoratif"
            app:layout_constraintEnd_toEndOf="@+id/upgradeBanner"
            app:layout_constraintTop_toTopOf="@+id/upgradeBanner"
            app:layout_constraintBottom_toBottomOf="@+id/upgradeBanner" />

        <ImageView
            android:id="@+id/diamond2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp"
            android:alpha="0.25"
            android:src="@drawable/garnet"
            android:contentDescription="Diamant décoratif"
            app:layout_constraintEnd_toEndOf="@+id/upgradeBanner"
            app:layout_constraintTop_toTopOf="@+id/upgradeBanner" />

        <ImageView
            android:id="@+id/diamond3"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="12dp"
            android:alpha="0.2"
            android:src="@drawable/garnet"
            android:contentDescription="Diamant décoratif"
            app:layout_constraintStart_toStartOf="@+id/upgradeBanner"
            app:layout_constraintTop_toTopOf="@+id/upgradeBanner" />

        <ImageView
            android:id="@+id/diamond4"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="148dp"
            android:layout_marginTop="-50dp"
            android:alpha="0.2"
            android:contentDescription="Diamant décoratif"
            android:src="@drawable/coins"
            app:layout_constraintStart_toStartOf="@+id/upgradeBanner"
            app:layout_constraintTop_toTopOf="@+id/upgradeBanner" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Barre de progression du niveau -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/levelProgressCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="-16dp"
        android:layout_marginEnd="16dp"
        app:strokeColor="@android:color/transparent"
        app:cardBackgroundColor="@color/card_background"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bannerContainer">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Label "2 LEVEL" -->

            <!-- Barre de progression avec texte -->
            <TextView
                android:id="@+id/levelLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="8dp"
                android:text="2"
                android:textSize="32sp"

                android:textAppearance="@style/TextAppearance.SportBrains.Title"
                android:textColor="@color/text_primary"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginEnd="8dp">

                <!-- Texte de progression "2300/4000" -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:text="LEVEL"
                    android:layout_marginBottom="-1dp"
                    android:elevation="4dp"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold" />

                <ProgressBar
                    android:id="@+id/levelProgressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@drawable/bg_progress_modern"
                    android:max="4000"
                    android:progress="2300"
                    android:progressBackgroundTint="@color/surface_variant"
                    android:progressTint="@color/success" />

                <TextView
                    android:id="@+id/progressText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2300/4000"
                    android:layout_marginTop="-1dp"
                    android:textAppearance="@style/TextAppearance.SportBrains.Body"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:layout_marginBottom="4dp" />

                <!-- Barre de progression -->
            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:id="@+id/titleText"
        android:layout_width="0dp"
        android:elevation="2dp"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/levelProgressCard">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/bg_coin_container_modern"
            android:text="BASE"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"

            android:textSize="24sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/bg_coin_container_modern"
            android:text="EXTRA"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            android:textStyle="bold" />

    </LinearLayout>
    <!-- RecyclerView pour les récompenses -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:clipToPadding="false"
        app:layout_constraintBottom_toTopOf="@+id/bottomButtonsCadeau"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleText"
        tools:listitem="@layout/card_cadeau_recompense" />

    <LinearLayout
        android:id="@+id/bottomButtonsCadeau"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnExtraCadeau"
            style="@style/Widget.SportBrains.Button.Primary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:layout_weight="1"
            android:text="4.99 EXTRA" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnClaimCadeau"
            style="@style/Widget.SportBrains.Button.Secondary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Claim" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>