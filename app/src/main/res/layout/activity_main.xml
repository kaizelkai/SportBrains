<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_modern"
    tools:context=".MainActivity">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <!-- Header avec paramètres, nom et score -->
            <androidx.cardview.widget.CardView
                android:id="@+id/headerCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/card_background">

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <FrameLayout
                        android:id="@+id/parametre"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_card_modern"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="12dp"
                            android:src="@drawable/setting"
                            android:contentDescription="@string/paramètres"
                            android:scaleType="fitCenter" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/nomTxt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:text="@string/hello"
                        android:textAppearance="@style/TextAppearance.SportBrains.Title"
                        android:textColor="@color/text_primary" />

                    <!-- Container pour les pièces -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/shop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@android:color/transparent"
                        app:strokeWidth="0dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:background="@drawable/bg_coin_container_modern"
                            android:paddingStart="12dp"
                            android:paddingTop="8dp"
                            android:paddingEnd="12dp"
                            android:paddingBottom="8dp">

                            <ImageView
                                android:id="@+id/status"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/garnet"
                                android:contentDescription="Pièces" />

                            <TextView
                                android:id="@+id/currentScore"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="2000"
                                android:textAppearance="@style/TextAppearance.SportBrains.Body"
                                android:textColor="@color/white"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/imageView4"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_marginStart="4dp"
                                android:src="@drawable/plus"
                                android:contentDescription="Ajouter" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Section principale avec logo et titre -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="vertical">

                <!-- Titre de l'application -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:letterSpacing="0.02"
                    android:text="@string/app_name"
                    android:textAppearance="@style/TextAppearance.SportBrains.Headline"
                    android:textColor="@color/text_primary"
                    android:textSize="42sp"
                    android:textStyle="bold" />

                <!-- Logo animé avec boutons superposés -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="32dp">

                    <!-- Logo animé en arrière-plan -->
                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/logoAnimationMain"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_gravity="center"
                        app:lottie_autoPlay="true"
                        app:lottie_fileName="bible_logo_animation_error.json"
                        app:lottie_loop="true" />

                    <!-- Actions rapides superposées au-dessus du logo -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:padding="4dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="12dp">

                                <FrameLayout
                                    android:layout_width="64dp"
                                    android:layout_height="64dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/bg_circle_button"
                                    android:clickable="true"
                                    android:elevation="8dp"
                                    android:focusable="true">

                                    <com.airbnb.lottie.LottieAnimationView
                                        android:id="@+id/lottieBackgroundTache"
                                        android:layout_width="80dp"
                                        android:layout_height="80dp"
                                        android:layout_gravity="center"
                                        android:visibility="invisible"
                                        app:lottie_autoPlay="true"
                                        app:lottie_fileName="lumiere.json"
                                        app:lottie_loop="true" />

                                    <ImageView
                                        android:id="@+id/tacheQuotidien"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:contentDescription="Tâches quotidiennes"
                                        android:padding="14dp"
                                        android:scaleType="fitCenter"
                                        android:src="@drawable/quest_quotidien" />
                                </FrameLayout>
                            </FrameLayout>

                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="12dp">

                                <FrameLayout
                                    android:layout_width="64dp"
                                    android:layout_height="64dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/bg_circle_button"
                                    android:clickable="true"
                                    android:elevation="8dp"
                                    android:focusable="true">

                                    <com.airbnb.lottie.LottieAnimationView
                                        android:id="@+id/lottieBackgroundQuest"
                                        android:layout_width="80dp"
                                        android:layout_height="80dp"
                                        android:layout_gravity="center"
                                        android:visibility="invisible"
                                        app:lottie_autoPlay="true"
                                        app:lottie_fileName="lumiere.json"
                                        app:lottie_loop="true" />

                                    <ImageView
                                        android:id="@+id/quest"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:contentDescription="Tâches quotidiennes"
                                        android:padding="14dp"
                                        android:scaleType="fitCenter"
                                        android:src="@drawable/medal1" />
                                </FrameLayout>
                            </FrameLayout>
                        </LinearLayout>


                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <FrameLayout
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:layout_marginBottom="12dp"
                                android:background="@drawable/bg_circle_button"
                                android:clickable="true"
                                android:elevation="8dp"
                                android:focusable="true">

                                <ImageView
                                    android:id="@+id/classement"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:contentDescription="Classement"
                                    android:padding="14dp"
                                    android:scaleType="fitCenter"
                                    android:src="@drawable/stat" />
                            </FrameLayout>

                            <FrameLayout
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:layout_marginBottom="12dp"
                                android:background="@drawable/bg_circle_button"
                                android:clickable="true"
                                android:elevation="8dp"
                                android:focusable="true">

                                <ImageView
                                    android:id="@+id/cadeau"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:contentDescription="Cadeau"
                                    android:padding="14dp"
                                    android:scaleType="fitCenter"
                                    android:src="@drawable/stat" />
                            </FrameLayout>

                            <FrameLayout
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:layout_marginBottom="12dp"
                                android:background="@drawable/bg_circle_button"
                                android:clickable="true"
                                android:elevation="8dp"
                                android:focusable="true">

                                <ImageView
                                    android:id="@+id/evenement"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:contentDescription="Événement"
                                    android:padding="14dp"
                                    android:scaleType="fitCenter"
                                    android:src="@drawable/stat" />
                            </FrameLayout>

                            <FrameLayout
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:layout_marginBottom="12dp"
                                android:background="@drawable/bg_circle_button"
                                android:clickable="true"
                                android:elevation="8dp"
                                android:focusable="true">

                                <ImageView
                                    android:id="@+id/packe"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:contentDescription="Pack"
                                    android:padding="14dp"
                                    android:scaleType="fitCenter"
                                    android:src="@drawable/stat" />
                            </FrameLayout>

                        </LinearLayout>
                    </LinearLayout>
                </FrameLayout>

                <!-- Boutons d'action principaux -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="24dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <!-- Bouton Niveau -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/play"
                        style="@style/Widget.SportBrains.Button.Primary"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/bg_button_primary_modern"
                        android:elevation="8dp"
                        android:letterSpacing="0.02"
                        android:stateListAnimator="@null"
                        android:text="@string/niveau"
                        android:textAppearance="@style/TextAppearance.SportBrains.Title"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <!-- Bouton Défi quotidien (verrouillé) -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_defi"
                        style="@style/Widget.SportBrains.Button.Secondary"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:background="@drawable/bg_button_secondary_modern"
                        android:drawableEnd="@drawable/ic_lock"
                        android:drawablePadding="12dp"
                        android:elevation="4dp"
                        android:enabled="false"
                        android:text="@string/defi_quotidien"
                        android:textAppearance="@style/TextAppearance.SportBrains.Title"
                        android:textColor="@color/text_hint"
                        android:textSize="20sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Navigation en bas - Corrigée pour une meilleure disposition -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/bg_navigation_gradient"
        app:cardCornerRadius="24dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="@color/card_background"
        app:strokeWidth="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="20dp"
            android:paddingTop="12dp"
            android:paddingEnd="20dp"
            android:paddingBottom="12dp">

            <!-- Image de profil circulaire -->
            <FrameLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/bg_circle_stroke"
                android:padding="3dp">

                <ImageView
                    android:id="@+id/profileImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/profile"
                    android:contentDescription="@string/desc_profile_image"
                    android:scaleType="centerCrop" />
            </FrameLayout>

            <!-- Espace flexible au centre -->
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- Bouton Quêtes -->
            <FrameLayout
                android:layout_width="60dp"
                android:layout_height="60dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_circle_button"
                    android:clickable="true"
                    android:focusable="true"
                    android:elevation="4dp">
                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/lottieBackgroundQuesta"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:visibility="invisible"
                        app:lottie_autoPlay="true"
                        app:lottie_fileName="lumiere.json"
                        app:lottie_loop="true" />
                    <ImageView
                        android:id="@+id/questA"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="14dp"
                        android:src="@drawable/medal1"
                        android:contentDescription="Quêtes"
                        android:scaleType="fitCenter" />
                </FrameLayout>
            </FrameLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
